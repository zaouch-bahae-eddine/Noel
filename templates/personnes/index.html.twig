    //Return le nom des input de symfony sous la forme de cet exemple (adresse[nom] => nom)
    function getNameInput(inputName) {
        let t = inputName.split("");
        let prefix = '';
        for (i = 0; i < t.length; i++) {
            if(t[i] != "[" && t[i] != "]"){
                prefix += t[i];
            } else if(t[i] == "["){
                prefix = '';
            }
        }
        return prefix;
    }
