                    $("#" + idModification).on('click', function (event) {
                        event.preventDefault();
                        modifierPersonne(event);
                        $('#modifierModal').modal('show');
                    });
                    $("#" + idSuppression).on('click', function (event) {
                        event.preventDefault();
                        let idToDelete = Number(event.target.id.substring(11));
