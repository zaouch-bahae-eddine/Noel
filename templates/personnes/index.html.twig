                    $('.sexe', e).html(ligne['sexe']);
                    $('.role', e).html(ligne['role']);
                    $('.adresse', e).html(
                        ligne['adresse']["numRue"] + ' ' +
                        ligne['adresse']["nomRue"] + '<br/>' +
                        ligne['adresse']["codePostal"] + ' ' +
                        ligne['adresse']["ville"]
                    );

